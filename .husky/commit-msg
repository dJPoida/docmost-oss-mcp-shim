#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check if we have a version bump
if [ -f ".version-temp" ]; then
  NEW_VERSION=$(cat .version-temp)
  echo "Creating tag v$NEW_VERSION"
  
  # Create the tag
  git tag "v$NEW_VERSION"
  
  # Clean up temp file
  rm .version-temp
  
  echo "Tag v$NEW_VERSION created successfully"
  
  # Update the commit message to include version info
  echo "Version bumped to v$NEW_VERSION" >> "$1"
fi
