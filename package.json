{
  "name": "docmost-oss-mcp-shim",
  "version": "0.5.2",
  "private": false,
  "type": "module",
  "bin": {
    "docmost-mcp": "dist/mcp/docmostServer.js"
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "mcp": "node dist/mcp/docmostServer.js",
    "mcp:dev": "tsx src/mcp/docmostServer.ts",
    "start": "node dist/server/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && node dist/server/server.js\"",
    "dev:watch": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check:editorconfig": "editorconfig-checker"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "axios": "^1.7.7",
    "axios-cookiejar-support": "^6.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lru-cache": "^10.2.0",
    "p-retry": "^6.2.0",
    "tough-cookie": "^4.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "editorconfig-checker": "^5.1.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
