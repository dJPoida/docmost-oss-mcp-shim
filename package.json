{
  "name": "docmost-oss-mcp-shim",
  "version": "0.2.13",
  "private": false,
  "type": "module",
  "bin": {
    "docmost-mcp": "mcp/docmost-server.js"
  },
  "files": [
    "src/**/*",
    "mcp/**/*",
    "README.md",
    "LICENSE"
  ],
  "main": "server.js",
  "scripts": {
    "mcp": "node mcp/docmost-server.js",
    "start": "node src/server.js",
    "dev": "nodemon --watch src/server.js src/server.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check:editorconfig": "editorconfig-checker",
    "tag": "git tag v$(node -p \"require('./package.json').version\")"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "axios": "^1.7.7",
    "axios-cookiejar-support": "^6.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "tough-cookie": "^4.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "editorconfig-checker": "^5.1.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
